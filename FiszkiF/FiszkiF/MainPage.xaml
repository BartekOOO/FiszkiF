<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FiszkiF.MainPage">

    <StackLayout BackgroundColor="#E6F4F1">
        <Grid Margin="0,20,0,0">
            <Label Text="Fiszki" FontAttributes="Bold,Italic" HorizontalTextAlignment="Center" FontSize="103"/>
            <Label Text="Fiszki" FontAttributes="Bold,Italic" HorizontalTextAlignment="Center" FontSize="100"/>
        </Grid>

        <Button BackgroundColor="#2296f3" FontSize="30" Margin="0,20,0,0" HeightRequest="70" TextColor="White" FontAttributes="Bold" Text="Wybierz zestaw" Clicked="Lista_zestawow"/>
        <Button BackgroundColor="#2296f3" FontSize="30" Margin="0,20,0,0" HeightRequest="70" TextColor="White" FontAttributes="Bold" Text="Nowy zestaw" Clicked="Dodawanie_zestawu"/>
    </StackLayout>
</ContentPage>
